                        <DataGridTextColumn Binding="{Binding InvoiceId}" Header="InvoiceId" Width="105"/>
                        <DataGridTextColumn Binding="{Binding Reference2}" Header="Reference" Width="105"/>
                        <DataGridTextColumn Binding="{Binding Value, Converter={StaticResource lRandConverter}}" Header="Value" Width="70" CellStyle="{StaticResource AlignRight}"/>
                        <DataGridTextColumn Binding="{Binding DueValue, Converter={StaticResource lRandConverter}}" Header="Balance" Width="70" CellStyle="{StaticResource AlignRight}"/>


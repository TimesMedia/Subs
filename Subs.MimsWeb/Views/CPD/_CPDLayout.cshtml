<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="/css/site.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100&display=swap" rel="stylesheet">

    <style>

        .Hamburger {
            height: 2em;
            width: 2em;
            display: block;
            position: absolute;
            right: 0;
            top: 8px;
        }

        #MenuDiv a {
            font-family: 'Montserrat', sans-serif;
            text-decoration: none;
            color: black;
            font-weight: bold;
        }

            #MenuDiv a:hover {
                font-size: 1.2em;
                background-color: aqua;
            }


        #MenuDiv div {
            flex: 1;
        }

        .CPDImageContainer {
            display: flex;
            justify-content: center;
            margin-bottom: 1em;
        }

            .CPDImageContainer img {
                width: 700px;
                height: 100px;
            }

        .MenuContainer {
            display: flex;
            flex-flow: row wrap;
            margin-left: 1em;
        }

        @@media (max-width: 480px) {
            .MenuContainer {
                display: flex;
                flex-flow: column wrap;
            }
        }
    </style>

    <script>
        function MenuFunction() {
            var x = document.getElementById("MenuDiv");
            var on = document.getElementById("HamburgerOn")
            var off = document.getElementById("HamburgerOff")


            if (x.style.display === "flex" | x.style.display === "") {
                x.style.display = "none";
                on.style.display = "none"
                off.style.display = "block"

            } else {
                x.style.display = "flex";
                on.style.display = "block"
                off.style.display = "none"
            }
        }
    </script>

</head>
<body>
    <div>
        <img src="/images/HamburgerOn.gif" title="Hamburger on" id="HamburgerOn" class="Hamburger" onclick="MenuFunction()" />
        <img src="/images//HamburgerOff.gif" Title="Hamburger off" id="HamburgerOff" class="Hamburger" onclick="MenuFunction()" />

        <div class="CPDImageContainer">
            <img src="/images/CPDLogo1.jpg" Title="Logo" width="110" />
        </div>


        <div id="MenuDiv" class="MenuContainer">

            <div class="text-center">
                @Html.ActionLink("CPDHOME","Index", "CPD")
            </div>


            <div class="text-center">
                 @Html.ActionLink("HISTORY", "History", "CPD")
            </div>

            <div class="text-center">
                <a asp-controller="CPD" asp-action="Enrol">ENROL</a>
            </div>

            <div class="text-center">
                <a asp-controller="CPD" asp-action="Read">READING MATERIAL</a>
            </div>

            <div class="text-center">
                <a asp-controller="Home" asp-action="Back">BACK TO MIMS PORTAL</a>
            </div>

        </div>
    </div>
    <br />
    @RenderBody()
</body>
</html>

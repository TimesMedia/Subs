    <script>
        $(document).ready(function () {
            $('#CustomerLookup').click(function () {
                $('#dialog').dialog("open");
            });

            $('#dialog').dialog({
                modal: true,
                autoOpen: false,
                buttons: [{
                    text: "Go",
                    click: function () {
                        document.getElementById('Email').value = document.getElementById('EmailAddress').value;
                        document.forms["SubmitForm"].submit();
                    }
                }]
            });
        });

<body>
    <!-- Google Tag Manager (noscript) -->
    <noscript>
        <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MRQP4B3F"
                height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>
    <!-- End Google Tag Manager (noscript) -->
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">
                    <div class="login-wrap p-4 p-md-5">

                        @*<h3 class="text-center mb-4">Sign In</h3>*@
                        <div class="MimsImage">
                            <img src="~/Content/img/logos/mims-small.png" width="150" />
                        </div>
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { id = "SubmitForm" }))
                        {
                            <p style="font-family: Arial; margin:2em 0em 2em 1em; color:red;">
                                @Html.ViewBag.Message
                            </p>

                            <p>
                                @Html.CheckBoxFor(x => x.ResetFlag, new { id = "ResetFlag", style = "visibility:hidden" })
                            </p>

                            <p>
                                <input id="Email" name="Email" type="hidden" value="">
                            </p>

                            <div id="dialog">
                                <label>Email address</label>
                                <input type="text" id="EmailAddress" />
                            </div>
                            <div class="form-group text-center">
                                @Html.LabelFor(x => x.CustomerId) &nbsp; &nbsp;
                                @Html.EditorFor(x => x.CustomerId)
                            </div>
                            <div class="form-group  text-center">
                                @Html.LabelFor(x => x.Password) &nbsp;   &nbsp;&nbsp;&nbsp;
                                @Html.EditorFor(x => x.Password)
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" id="signin" class="form-control btn btn-primary rounded submit px-3">Login</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">

                                    <a href="#" class="LoginStyle" id="CustomerLookup">Forgot customerID</a>

                                </div>

                                <div class="w-50 ">
                                    &nbsp;&nbsp;&nbsp; <a href="~/Home/RegisterEmail">Register</a>
                                </div>

                                <div class="w-50 ">
                                    <a href="#" class="LoginStyle" onclick="ResetPassword()">Forgot password</a>
                                </div>

                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        function UsePassword() {
            try {
                document.getElementById("ResetFlag").checked = false;
                document.forms["SubmitForm"].submit();
            }
            catch (message) {
                alert(message);
            }

        }

        function CustomerLookup() {
            try {

                window.alert("Under construction.");
                // Do an Ajax call to find all customers numbers on this email address, plus their names.

                // Display them in a list where one could be selected.

                //document.getElementById("ResetFlag").checked = false;
                //window.alert("Under construction.");


                //window.alert(document.getElementsByName('Email').values[0]);
                //document.forms["SubmitForm"].submit();

            }
            catch (message) {
                window.alert(message);
            }

        }

        function ResetPassword() {

            try {

                document.getElementById("ResetFlag").checked = true;
                document.forms["SubmitForm"].submit();
            }
            catch (message) {
                window.alert(message);
            }

        }

    </script>

    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</body>
</html>

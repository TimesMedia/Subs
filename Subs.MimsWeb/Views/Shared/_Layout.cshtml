    }
    p {
        font-size: 1rem;
    }
}


        /* Reset Defaults */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        img, video {
            max-width: 100%;
            height: auto;
            display: block;
        }


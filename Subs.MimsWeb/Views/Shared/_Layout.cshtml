    <style>

        .Hamburger {
            height: 2em;
            width: 2em;
            display: block;
            position: absolute;
            right: 0;
            top: 0;
        }

        #MenuDiv a {
            font-family: 'Montserrat', sans-serif;
            text-decoration: none;
            color: black;
            font-weight: bold;
        }

        #img {
            font-family: 'Montserrat', sans-serif;
            text-decoration: none;
            color: black;
            font-weight: bold;
            position: fixed;
        }

        #MenuDiv a:hover {
            /* background-color: cornflowerblue;*/
        }


        #MenuDiv {
            flex: 1;
            justify-content: center;
            margin-right: 1em;
        }

        .MimsImage {
            display: flex;
            justify-content: center;
            margin-bottom: 0.5em;
        }

        .MenuContainer {
            display: flex;
            flex-flow: row wrap;
            margin-left: 1em;
        }

        @@media (max-width: 480px) {
            .MenuContainer {
                display: flex;
                flex-flow: column wrap;
            }
        }



        #MenuDiv {
            overflow: hidden;
            background-color: #fff;
        }

            #MenuDiv a {
                float: left;
                font-size: 15px;
                color: black;
                text-align: center;
                padding: 14px 14px;
                text-decoration: none;
            }

        .dropdown {
            float: left;
            overflow: hidden;
        }

            .dropdown .dropbtn {
                font-size: 16px;
                border: none;
                outline: none;
                color: white;
                padding: 14px 16px;
                background-color: inherit;
                font-family: inherit;
                margin: 0;
            }

            #MenuDiv a:hover, .dropdown:hover .dropbtn {
                background-color: dodgerblue;
                color: #fff;
                text-underline-offset: auto;
            }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            .dropdown-content a {
                float: none;
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
                text-align: left;
            }

                .dropdown-content a:hover {
                    background-color: #ddd;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>

    <script>
        function MenuFunction() {
            var x = document.getElementById("MenuDiv");
            var on = document.getElementById("HamburgerOn")
            var off = document.getElementById("HamburgerOff")


            if (x.style.display === "flex" | x.style.display === "") {
                x.style.display = "none";
                on.style.display = "none"
                off.style.display = "block"

            } else {
                x.style.display = "flex";
                on.style.display = "block"
                off.style.display = "none"
            }
        }
    </script>

